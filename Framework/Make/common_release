CXX = g++

CXXFLAGS = -O3 -Wall -fmessage-length=0

SRCDIR = ./Sources/Common

OBJDIR = ./Objects/Release/Common

TARGETDIR = ./Libs/Release

INCLUDE = ./Include

TARGET = libCommon.a

CPP = $(wildcard $(SRCDIR)/*.cpp)

OBJ = $(CPP:.cpp=.o)

%.o: %.cpp
	$(CXX) $(CXXFLAGS) $(addprefix -I ,$(INCLUDE)) -c $^ -o $(OBJDIR)/$(notdir $@)

common_release: $(OBJ)
	ar cr $(TARGETDIR)/$(TARGET) $(addprefix $(OBJDIR)/,$(notdir $(OBJ)))
