
# OS := Win

# MAKETYPE := Debug

CXX = g++

ifeq ($(MAKETYPE), Debug)
	CXXFLAGS = -O0 -g3 -Wall -D_DEBUG -fmessage-length=0 -pipe
else
	CXXFLAGS = -O3 -Wall -fmessage-length=0 -pipe
endif

ifeq ($(OS), Win)
	EXEFILEEXT := .exe
	DLLFILEEXT := .dll
else
	EXEFILEEXT :=
	DLLFILEEXT := .so
endif
